<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Meus Químicos</title>
		
		<!-- JQuery -->
		<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">
	
		<div id="fb-root"></div>
		<script async defer crossorigin="anonymous" 
		src="https://connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v14.0" nonce="TPoJ9nrs"></script>

		<script>
			$(document).ready( function(){

			$('#btn_cadastro').click(function(){
				window.location.href = '/cadastro_user';
			});
	})
		</script>
	</head>

	<body>

		<nav class="navbar navbar-default">
		<div class="container">
			<div class="col-md-12">
				<div class="container-fluid">
					<img alt="Meus Químicos" src="images/logo_my_quimicos.png" class="logo2">					
					<button type="button" class="right btn btn-success" id="btn_cadastro">Cadastre-se</button>
				</div>
			</div>
		</div>
	</nav>

	<% if(validacao.length > 0) { %>
		<div class="alert alert-danger">
			<strong>Atenção!</strong>
			<ul>
				<% for( var i = 0;i< validacao.length ;i++) { %>
					<li><%=validacao[i].msg%></li>
				<% } %>
			</ul>
		</div>
	<% } %>
	<% if(dadosForm.msg == 1) { %>
		<div class="alert alert-danger">
			<strong>Atenção!</strong>
			<ul>
					<li>Usuário ou Senha incorretos! </li>
			</ul>
		</div>
	<% } %>
	<% if(dadosForm.msg == 2) { %>
		<div class="alert alert-info">
			<strong>Atenção!</strong>
			<ul>
					<li>Usuário criado com sucesso! </li>
			</ul>
		</div>
	<% } %>
		<div class="container home">
            <div class="row">
                <div class="col-md-2"></div>
               
                <div class="col-md-4">
                
                </div>
                
                <div class="col-md-4 painel-login">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">

									<img src="images/logo_my_quimicos2.png" class="img-responsive img-center" />
									<br />

									<form action="/autenticar" method="post">
										<div class="form-group">
											<input type="text" name="usuario" id="usuario" class="form-control" placeholder="Nome de usuário" value="<%=dadosForm.usuario%>">
										</div>

										<div class="form-group">
											<input type="password" name="senha" id="senha" class="form-control" placeholder="Senha">
										</div>

										<div class="form-group">
											<button class="btn btn-primary btn-login">Entrar</button>
										</div>

										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="OU">
												</div>
											</div>
										</div>
										

										<div class="form-group">
											<div class="row">
												<div class="col-lg-12">
													<div class="text-center">
														<div class="fb-login-button" data-width="" data-size="large" 
														data-button-type="login_with" data-layout="rounded"
														 data-auto-logout-link="false" data-use-continue-as="false"></div>
													</div>
												</div>
											</div>
										</div>
									</form>
								
								</div>
							</div>
						</div>
					</div>
                </div>

                <div class="col-md-2"></div>
            </div>
        </div>
		
	</body>
</html>